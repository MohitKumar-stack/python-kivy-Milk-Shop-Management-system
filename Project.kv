                on_press:root.Create_new()   
            Button:
                text:"DELETE"
                background_color:(.06,.45,.45,1)
                size_hint_y:None
                height:50
                font_size:20
                on_release:root.Delete_crete()       
        BoxLayout:
            orientation:'vertical'
            spacing:20
